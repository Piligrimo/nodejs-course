<%- include('../shared/head.ejs') %>
<link rel="stylesheet" href="/style/product-form.css">
</head>
<body>
    <%- include('../shared/nav.ejs') %>
    <main>
        <h1> <%= isEdit ? product.title: 'Add product' %></h1>
        <form class="product-form" action="/admin/<%= isEdit ? 'edit-product': 'add-product' %>" method="POST">
            <div class="form-control">
                <label for="title" id="title">Title</label>
                <input type="text" name="title" value="<%= isEdit ? product.title : '' %>"/>
                <label for="imageUrl" id="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" value="<%= isEdit ? product.imageUrl : '' %>"/>
                <label for="price" id="price">Price</label>
                <input type="number" name="price" step="0.01" value="<%= isEdit ? product.price : '' %>"/>
                <label for="description" >Description</label>
                <textarea  name="description" id="description" rows="5"><%= isEdit ? product.description : '' %></textarea>
                <% if (isEdit) { %>
                    <input type="hidden" name="id" id="id" value="<%= product.id %>"/>
                <% } %>
            </div>
            <button type="submit">  <%= isEdit ? 'Save' : 'Add product' %></button>
        </form>
    </main>
<%- include('../shared/end.ejs') %>
